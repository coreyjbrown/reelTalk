  <div class="jumbotron">

    <div class ="row">
      <div class="col-md-12" style="text-align:center">
        <h1 class="center-block">ReelTalk</h1>
      </div>
    </div>

 <!--    <div class="row">
      <div class="col-md-12" style="text-align:center">
        <form>
          <div class="form-group">
            <input type="text" class="form-control" id="search" placeholder="Enter your movie . . .">
          </div>
          <button type="search" class="btn btn-default">Search</button>
        </form>
      </div>
